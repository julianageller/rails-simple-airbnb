<p id="notice"><%= notice %></p>

<div class="row">
 <%= image_tag @flat.picture, alt: "alttext", class: "img-fluid" %>
  <div class="container-flat">
    <p>
      <h1><%= @flat.name %></h1>
    </p>

    <p>
     <h3><%= @flat.address %></h3>
    </p>

    <p>
     <%= @flat.description %>
    </p>

    <p>
      <i class="fas fa-euro-sign"></i> <%= @flat.price_per_night %>
      <i class="fas fa-user-friends"></i> <%= @flat.number_of_guests %>
    </p>
    <%= link_to 'Edit', edit_flat_path(@flat), class: "btn btn-outline-success" %>
    <%= link_to 'Back', flats_path, class: "btn btn-outline-info" %>
  </div>
</div>


